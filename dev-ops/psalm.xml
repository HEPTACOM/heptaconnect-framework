<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config ../vendor/vimeo/psalm/config.xsd"
    cacheDirectory="../.build/psalm"
    errorLevel="1"
>
    <issueHandlers>
        <LessSpecificReturnType errorLevel="info" />
        <MixedPropertyTypeCoercion>
            <errorLevel type="info">
                <!-- Can be removed when bentools/iterable-functions supports psalm -->
                <referencedProperty name="Heptacom\HeptaConnect\Portal\Base\EmitterStack::$emitters"/>
                <referencedProperty name="Heptacom\HeptaConnect\Portal\Base\Exploration\ExplorerStack::$explorers"/>
                <referencedProperty name="Heptacom\HeptaConnect\Portal\Base\Reception\ReceiverStack::$receivers"/>
            </errorLevel>
        </MixedPropertyTypeCoercion>

        <!-- Not unnecessary for all (IDEs, other toolings) -->
        <UnnecessaryVarAnnotation>
            <errorLevel type="info">
                <file name="../src/Mapping/MappedDatasetEntityCollection.php"/>
                <file name="../src/Mapping/MappingComponentCollection.php"/>
                <file name="../src/Portal/PortalCollection.php"/>
                <file name="../src/Portal/PortalExtensionCollection.php"/>
                <file name="../src/Reception/Contract/ReceiverContract.php"/>
            </errorLevel>
        </UnnecessaryVarAnnotation>

        <UndefinedClass>
            <errorLevel type="info">
                <!-- php 8 support for a min php 7 resource -->
                <file name="../src/Builder/ResolveArgumentsTrait.php"/>
            </errorLevel>
        </UndefinedClass>
        <TypeDoesNotContainType>
            <errorLevel type="info">
                <!-- php 8 support for a min php 7 resource -->
                <file name="../src/Builder/ResolveArgumentsTrait.php"/>
            </errorLevel>
        </TypeDoesNotContainType>
        <MixedArgument>
            <errorLevel type="info">
                <!-- php 8 support for a min php 7 resource (on $type->getTypes() in array_map) -->
                <file name="../src/Builder/ResolveArgumentsTrait.php"/>
            </errorLevel>
        </MixedArgument>

        <PossiblyInvalidArgument>
            <errorLevel type="info">
                <!-- having an empty array for an iterable is "invalid" -->
                <file name="../src/Mapping/TypedMappedDatasetEntityCollection.php"/>
            </errorLevel>
        </PossiblyInvalidArgument>

        <MixedAssignment>
            <errorLevel type="info">
                <!-- there is a lot of unclear content handling. You basically just know mixed -->
                <file name="../src/Builder/ResolveArgumentsTrait.php"/>
            </errorLevel>
        </MixedAssignment>

        <!-- never trust user input -->
        <RedundantCondition>
            <errorLevel type="info">
                <file name="../src/Emission/Contract/EmitterContract.php"/>
                <file name="../src/Exploration/Contract/ExplorerContract.php"/>
            </errorLevel>
        </RedundantCondition>
        <!-- never trust user input -->
        <RedundantConditionGivenDocblockType>
            <errorLevel type="info">
                <file name="../src/Emission/Contract/EmitterContract.php"/>
            </errorLevel>
        </RedundantConditionGivenDocblockType>
        <!-- never trust user input -->
        <DocblockTypeContradiction>
            <errorLevel type="info">
                <file name="../src/Emission/Contract/EmitterContract.php"/>
            </errorLevel>
        </DocblockTypeContradiction>
    </issueHandlers>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
        <pluginClass class="DQ5Studios\PsalmJunit\Plugin">
            <always/>
            <showInfo>false</showInfo>
            <filepath>../.build/psalm.junit.xml</filepath>
        </pluginClass>
    </plugins>

    <projectFiles>
        <directory name="../src/" />
        <ignoreFiles>
            <directory name="../vendor/" />
        </ignoreFiles>
    </projectFiles>
</psalm>
