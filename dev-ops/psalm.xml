<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config ../vendor/vimeo/psalm/config.xsd"
    cacheDirectory="../.build/psalm"
    errorLevel="1"
>
    <issueHandlers>
        <LessSpecificReturnType errorLevel="info" />

        <!-- never trust user input -->
        <DocblockTypeContradiction>
            <errorLevel type="info">
                <file name="../src/TypedMappingCollection.php"/>
            </errorLevel>
        </DocblockTypeContradiction>

        <!-- Not unnecessary for all (IDEs, other toolings) -->
        <UnnecessaryVarAnnotation>
            <errorLevel type="info">
                <file name="../src/MappingCollection.php"/>
            </errorLevel>
        </UnnecessaryVarAnnotation>
    </issueHandlers>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
        <pluginClass class="DQ5Studios\PsalmJunit\Plugin">
            <always/>
            <showInfo>false</showInfo>
            <filepath>../.build/psalm.junit.xml</filepath>
        </pluginClass>
    </plugins>

    <projectFiles>
        <directory name="../src/" />
        <ignoreFiles>
            <directory name="../vendor/" />
        </ignoreFiles>
    </projectFiles>
</psalm>
