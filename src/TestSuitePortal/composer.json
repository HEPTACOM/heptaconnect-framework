{
    "name": "heptacom/heptaconnect-test-suite-portal",
    "description": "HEPTAconnect test suite to challenge portals against real life scenarios",
    "license": [
        "AGPL-3.0-or-later",
        "proprietary"
    ],
    "type": "library",
    "keywords": [
        "heptaconnect-portal",
        "testing"
    ],
    "authors": [
        {
            "name": "HEPTACOM GmbH"
        }
    ],
    "homepage": "https://heptaconnect.io",
    "support": {
        "issues": "https://github.com/HEPTACOM/heptaconnect-framework/issues",
        "source": "https://github.com/HEPTACOM/heptaconnect-framework",
        "docs": "https://heptaconnect.io/",
        "rss": "https://heptaconnect.io/news/rss2.xml"
    },
    "require": {
        "php": ">=8.3",
        "brzuchal/filesystem-stream-wrapper": "^0.9",
        "heptacom/heptaconnect-core": "self.version",
        "heptacom/heptaconnect-dataset-base": "self.version",
        "heptacom/heptaconnect-portal-base": "self.version",
        "heptacom/heptaconnect-storage-base": "self.version",
        "nyholm/psr7": "^1",
        "php-http/curl-client": "^2",
        "psr/log": "^2.0 || ^3.0",
        "symfony/cache": ">=5.3.7",
        "symfony/dependency-injection": ">=5.3.7"
    },
    "require-dev": {
        "phpunit/phpunit": ">=11"
    },
    "suggest": {
        "phpunit/phpunit": ">=11"
    },
    "repositories": {
        "heptaconnect-sources": {
            "type": "path",
            "url": "../**"
        }
    },
    "autoload": {
        "psr-4": {
            "Heptacom\\HeptaConnect\\TestSuite\\Portal\\": ""
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "php-http/discovery": true
        }
    }
}
